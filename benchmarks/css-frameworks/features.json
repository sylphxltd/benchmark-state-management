{
  "description": "Comparison of core features and capabilities across CSS frameworks",
  "features": [
    {
      "id": "typeSafe",
      "label": "Type Safety",
      "description": "Native TypeScript support without runtime overhead"
    },
    {
      "id": "codegenRequired",
      "label": "Codegen Required",
      "description": "Requires code generation step for type safety"
    },
    {
      "id": "designTokens",
      "label": "Design Tokens",
      "description": "Built-in design token/theme configuration system"
    },
    {
      "id": "presetSystem",
      "label": "Preset System",
      "description": "Installable preset packages for complete design systems"
    },
    {
      "id": "criticalCSS",
      "label": "Critical CSS",
      "description": "Automatic critical CSS extraction for performance"
    },
    {
      "id": "cssIcons",
      "label": "Pure CSS Icons",
      "description": "Icon support via pure CSS classes (no SVG/font)"
    }
  ],
  "libraries": {
    "@sylphx/silk": {
      "typeSafe": true,
      "codegenRequired": false,
      "designTokens": true,
      "presetSystem": "2 official (Material, Minimal)",
      "criticalCSS": true,
      "cssIcons": false,
      "sources": {
        "typeSafe": "https://github.com/sylphxltd/silk#type-safety",
        "designTokens": "https://github.com/sylphxltd/silk#design-tokens",
        "presetSystem": "https://github.com/sylphxltd/silk#presets",
        "criticalCSS": "https://github.com/sylphxltd/silk#critical-css"
      }
    },
    "tailwindcss": {
      "typeSafe": false,
      "codegenRequired": false,
      "designTokens": true,
      "presetSystem": false,
      "criticalCSS": false,
      "cssIcons": false,
      "sources": {
        "designTokens": "https://tailwindcss.com/docs/theme"
      }
    },
    "@pandacss/dev": {
      "typeSafe": true,
      "codegenRequired": true,
      "designTokens": true,
      "presetSystem": "Community presets",
      "criticalCSS": false,
      "cssIcons": false,
      "sources": {
        "typeSafe": "https://panda-css.com/docs/concepts/type-safety",
        "codegenRequired": "https://panda-css.com/docs/installation/cli",
        "designTokens": "https://panda-css.com/docs/theming/tokens",
        "presetSystem": "https://panda-css.com/docs/customization/presets"
      }
    },
    "unocss": {
      "typeSafe": false,
      "codegenRequired": false,
      "designTokens": true,
      "presetSystem": "20+ official presets",
      "criticalCSS": false,
      "cssIcons": true,
      "sources": {
        "designTokens": "https://unocss.dev/config/theme",
        "presetSystem": "https://unocss.dev/presets/",
        "cssIcons": "https://unocss.dev/presets/icons"
      }
    }
  }
}
