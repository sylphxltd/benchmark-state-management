{
  "name": "css-frameworks-benchmark",
  "version": "1.0.0",
  "description": "Professional CSS framework benchmark suite comparing runtime performance, CSS output size, and build times",
  "type": "module",
  "scripts": {
    "benchmark": "bun run index.ts",
    "bench:runtime": "vitest bench --run --outputJson=results/runtime.json",
    "bench:build": "tsx build-tests/run-all.ts",
    "merge:results": "tsx build-tests/merge-results.ts",
    "clean": "rm -rf results dist && mkdir -p results"
  },
  "dependencies": {
    "@pandacss/dev": "^1.4.3",
    "@sylphx/silk": "^1.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwindcss": "^3.4.15",
    "unocss": "^0.65.3"
  },
  "devDependencies": {
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.22",
    "postcss": "^8.5.6",
    "tsx": "^4.20.6",
    "vite": "^6.0.7",
    "vitest": "^4.0.7"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
